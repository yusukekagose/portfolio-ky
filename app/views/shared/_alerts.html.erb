<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "", sticky: false, :time => 2000 ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "", sticky: false, :time => 2000 ) %>
<% else flash[:error] %>
  <%= js add_gritter(flash[:notice], title: "", sticky: false, :time => 2000 ) %>
<% end %>